{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
